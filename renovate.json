{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "schedule": [
    "* * * * 6"
  ],
  "automerge": false,
  "prCreation": "immediate",
  "automergeStrategy": "squash",
  "forkProcessing": "enabled",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)garage/Chart\\.yaml$"
      ],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\""
      ],
      "depNameTemplate": "dxflrs/amd64_garage",
      "datasourceTemplate": "docker"
    }
  ],
  "includePaths": [
    "garage/**"
  ]
}